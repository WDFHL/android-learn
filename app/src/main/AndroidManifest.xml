<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.learn">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".widget.WidgetActivity"/>


        <!--android控件-->
        <activity android:name=".widget.activity.CoordinatorLayoutActivity"/>
        <activity android:name=".widget.activity.TabLayoutActivity"/>
        <activity android:name=".widget.activity.AppBarLayoutActivity"/>

        <activity android:name=".widget.activity.RecyclerViewActivity"/>


        <!--android动画-->
        <activity android:name=".animation.AnimationActivity"/>
        <activity android:name=".animation.ViewAnimationActivity"/>
        <activity android:name=".animation.DrawableAnimationActivity"/>
        <activity android:name=".animation.PropertyAnimationActivity"/>

        <!--加载图片-->
        <activity android:name=".loadpic.LoadPicActivity"/>

        <!--图片-->
        <activity android:name=".pic.PicActivity"/>


        <!--联网框架-->
        <activity android:name=".net.activity.NetWorkActivity"/>

    </application>

</manifest>